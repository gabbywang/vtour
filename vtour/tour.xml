			</level>
			<level tiledimagewidth="1280" tiledimageheight="1280">
				<cube url="panos/1.tiles/%s/l2/%0v/l2_%s_%0v_%0h.jpg" />
			</level>
			<level tiledimagewidth="640" tiledimageheight="640">
				<cube url="panos/1.tiles/%s/l1/%0v/l1_%s_%0v_%0h.jpg" />
